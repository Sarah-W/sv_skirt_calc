rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /skirts/{skirt} {
      allow read, delete, update: if request.auth.uid == request.resource.data.user;
      allow create: if request.auth != null
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true
    }
  }
}